<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/training"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_medium"
    >
        <TextView
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notifications"
            android:textColor="@color/black"
            android:layout_gravity="start"

            android:gravity="start"
            android:padding="@dimen/padding_medium"
            android:textStyle="bold|italic"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            />

        <TextView
            android:id="@+id/count"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/padding_small"
            android:layout_marginLeft="@dimen/padding_small"
            android:layout_toEndOf="@+id/notification"
            android:layout_marginBottom="@dimen/padding_small"
            android:background="@drawable/rounded_blue"
            android:paddingRight="@dimen/padding_small"
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            android:layout_toRightOf="@+id/notification" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">
        <LinearLayout
            android:id="@+id/mygroupsLinear"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/rounded_blue"
            android:layout_gravity="center"
            android:gravity="center"
           >


            <TextView
                android:id="@+id/mygroupsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mygroups"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        </LinearLayout>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">
        <LinearLayout
            android:id="@+id/todaygroupsLinear"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/rounded_blue"
            android:layout_gravity="center"
            android:gravity="center">


            <TextView
                android:id="@+id/todaygroupsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/groupstoday"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/newgroupsLinear"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/rounded_blue"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/newgroupsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/registergroup"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        </LinearLayout>



    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_dialog_email" />


</LinearLayout>